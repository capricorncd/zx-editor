{
  "name": "zx-editor",
  "version": "3.1.0",
  "description": "ZxEditor is a HTML5 rich text editor",
  "author": "capricorncd",
  "main": "./dist/zx-editor.umd.js",
  "module": "./dist/zx-editor.es.js",
  "exports": {
    ".": {
      "import": "./dist/zx-editor.es.js",
      "require": "./dist/zx-editor.umd.js"
    },
    "./editor": {
      "import": "./dist/editor.es.js",
      "require": "./dist/editor.umd.js"
    },
    "./event-emitter": {
      "import": "./dist/editor.es.js",
      "require": "./dist/editor.umd.js"
    },
    "./nodejs-helpers": {
      "require": "./packages/nodejs/index.js",
      "types": "./packages/nodejs/types.d.ts"
    }
  },
  "github": "https://github.com/capricorncd",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "packages/nodejs/*.js",
    "types/index.d.ts"
  ],
  "packageManager": "pnpm@7.6.0",
  "scripts": {
    "coverage": "vitest run --coverage",
    "docs": "node scripts/create-docs.js",
    "lint": "eslint . --fix --ext .js,.cjs,.ts"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "inquirer": "^8.2.4",
    "jsdom": "^19.0.0",
    "pnpm": "^7.6.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "sass": "^1.51.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.3",
    "vitest": "^0.19.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capricorncd/zx-editor.git"
  },
  "keywords": [
    "editor",
    "html",
    "web",
    "h5",
    "mobile"
  ],
  "bugs": {
    "url": "https://github.com/capricorncd/zx-editor/issues"
  },
  "homepage": "https://github.com/capricorncd/zx-editor",
  "license": "MIT",
  "dependencies": {
    "zx-sml": "^0.5.0"
  }
}
