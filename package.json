{
  "name": "sp-editor",
  "version": "1.0.2",
  "description": "SpEditor is a HTML5 rich text editor in smartphone browsers",
  "author": "capricorncd",
  "main": "./dist/sp-editor.umd.js",
  "module": "./dist/sp-editor.es.js",
  "exports": {
    ".": {
      "import": "./dist/sp-editor.es.js",
      "default": "./dist/sp-editor.umd.js"
    },
    "./editor": {
      "import": "./dist/editor.es.js",
      "default": "./dist/editor.umd.js"
    },
    "./event-emitter": {
      "import": "./dist/event-emitter.es.js",
      "require": "./dist/event-emitter.umd.js"
    },
    "./nodejs-helpers": {
      "default": "./packages/nodejs/index.js",
      "types": "./packages/nodejs/types.d.ts"
    },
    "./css": "./dist/sp-editor.min.css",
    "./editor/css": "./dist/editor.min.css"
  },
  "github": "https://github.com/capricorncd/zx-editor",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "docs",
    "packages/**/src/*.ts",
    "packages/**/package.json",
    "packages/nodejs/*.js",
    "packages/nodejs/types.d.ts",
    "types/index.d.ts"
  ],
  "packageManager": "pnpm@7.6.0",
  "scripts": {
    "coverage": "vitest run --coverage",
    "dev": "cd packages/sp-editor && pnpm run dev",
    "build": "pnpm run lint && cd packages/editor && pnpm run build && cd ../sp-editor && pnpm run build && pnpm run demo",
    "docs": "cd packages/editor && pnpm run docs && cd ../nodejs && pnpm run docs && cd ../sp-editor && pnpm run docs && cd ../event-emitter && pnpm run docs",
    "lint": "eslint . --fix --ext .js,.cjs,.ts"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "inquirer": "^8.2.4",
    "jsdom": "^19.0.0",
    "pnpm": "^7.6.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "sass": "^1.51.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.3",
    "vitest": "^0.19.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capricorncd/zx-editor.git"
  },
  "keywords": [
    "editor",
    "html",
    "web",
    "h5",
    "mobile"
  ],
  "bugs": {
    "url": "https://github.com/capricorncd/zx-editor/issues"
  },
  "homepage": "https://github.com/capricorncd/zx-editor",
  "license": "MIT",
  "dependencies": {
    "zx-sml": "^0.5.6"
  },
  "browserslist": [
    "last 4 version"
  ]
}
